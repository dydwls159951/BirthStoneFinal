<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.perples.birthstone.Pregnant.Waiting">

<FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/gradient_bg"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/waiting_logo"
        android:layout_width="28.2dp"
        android:layout_height="24.4dp"
        android:layout_gravity="center_vertical|center_horizontal"
        app:srcCompat="@drawable/logo_white" />

</FrameLayout>

<TextView
    android:id="@+id/textView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="117dp"
    android:gravity="center_horizontal"
    android:text="요청을 보냈어요!"
    android:textSize="30sp"
    android:textColor="#000000"
    android:letterSpacing="-0.02"
    android:lineSpacingExtra="-5sp"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

<TextView
    android:id="@+id/textView16"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:text="매칭이 될 때까지 조금만 기다려주세요 :)"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView" />

<Button
    android:id="@+id/fake"
    android:layout_width="133.7dp"
    android:layout_height="115.6dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/logo_color"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView16" />

<Button
    android:id="@+id/btn_cancel"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginBottom="50dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/rqbtn_bg"
    android:lineSpacingExtra="8sp"
    android:text="탄생석 요청 취소"
    android:textColor="#ffffff"
    android:textSize="17sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView4"
    app:layout_constraintVertical_bias="0.918" />

</android.support.constraint.ConstraintLayout>