        <FrameLayout
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_gravity="left">

            <View
                android:id="@+id/view3"
                android:layout_width="24dp"
                android:layout_height="43dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/miniview_rect" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_train1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/front_train" />

                <View
                    android:id="@+id/view_train2"
                    android:layout_width="18dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="3dp"
                    android:alpha="0.3"
                    android:background="#9d7150" />

                <View
                    android:id="@+id/view_train3"
                    android:layout_width="18dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="3dp"
                    android:alpha="0.3"
                    android:background="#9d7150" />

                <View
                    android:id="@+id/view_train4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="3dp"
                    android:alpha="0.3"
                    android:background="#9d7150" />
            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/gen_accept_but"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#9ac9e9"
            android:lineSpacingExtra="8sp"
            android:text="선택 완료"
            android:textColor="#ffffff"
